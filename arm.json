{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "The prefix string to add to a generated string that is unique to the resourceGroup."
      }
    },
    "DCName": {
      "type": "string",
      "defaultValue": "DC-1",
      "metadata": {
        "description": "Domain Controller Name"
      }
    },
            "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            },
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
            },
            "defaultValue": ""
        },
    "adminusername": {
      "type": "string",
      "metadata": {
        "description": "Please provide your administrator username"
      }
    },
    "adminpassword": {
      "type": "securestring",
      "metadata": {
        "description": "Please provide your administrator password"
      }
    },
    "DomainName": {
      "type": "string",
      "metadata": {
        "description": "Fully qualified domain name for Active Directory"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "labvnet",
      "metadata": {
        "description": "Virtual network name"
      }
    },
    "virtualNetworkAddressRange": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Virtual network address range"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "labsubnet",
      "metadata": {
        "description": "Subnet name"
      }
    },
    "subnetRange": {
      "type": "string",
      "defaultValue": "10.0.0.0/24",
      "metadata": {
        "description": "subnet ip range"
      }
    },
    "privateIPAddress": {
      "type": "string",
      "defaultValue": "10.0.0.4",
      "metadata": {
        "description": "Private ip address"
      }
    },
    "AADCName": {
      "type": "string",
      "defaultValue": "AADC",
      "metadata": {
        "description": "AAD Connect Server Name"
      }
    },
    "EXCHName": {
      "type": "string",
      "defaultValue": "EXCHMB1",
      "metadata": {
        "description": "Exchange Mailbox Server Name"
      }
    },
    "WorkstationName": {
      "type": "string",
      "defaultValue": "Workstation1",
      "metadata": {
        "description": "Default name of workstation"
      }
    }
  },
  "variables": {
    "storageName": "[toLower( concat( parameters('storageNamePrefix'), uniqueString(resourceGroup().id) ) )]",
    "dcpublicip": "[toLower(concat(parameters('DCName'),uniqueString(resourceGroup().id)))]",
    "aadcpublicip": "[toLower(concat(parameters('AADCName'),uniqueString(resourceGroup().id)))]",
    "location": "[resourceGroup().location]",
    "linkedtemplateuri": "[uri(parameters('_artifactsLocation'), concat('linkedTemplates/linkedTemplate.json', parameters('_artifactsLocationSasToken')))]",
    "exchpublicip": "[toLower(concat(parameters('EXCHName'),uniqueString(resourceGroup().id)))]",
    "workstationpublicip": "[toLower(concat(parameters('WorkstationName'),uniqueString(resourceGroup().id)))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageName')]",
      "apiVersion": "2015-06-15",
      "location": "[variables('location')]",
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "name": "[variables('dcpublicip')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "DC-1-PublicIPAddress"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('dcpublicip')]"
        }
      }
    },
    {
      "name": "DC-1-NSG",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "nsgRule1",
            "properties": {
              "description": "description",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('virtualNetworkName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', 'DC-1-NSG')]"
      ],
      "tags": {
        "displayName": "[parameters('virtualNetworkName')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('virtualNetworkAddressRange')]"
          ]
        },
        "dhcpOptions": {
            "dnsServers": "[parameters('privateIPAddress')]"
          },
        "subnets": [
          {
            "name": "[parameters('subnetName')]",
            "properties": {
              "addressPrefix": "[parameters('subnetRange')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'DC-1-NSG')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "DC1-NetworkInterface",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('dcpublicip'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ],
      "tags": {
        "displayName": "DC-1 Network Interface"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipConfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
            "privateIPAddress":"[parameters('privateIPAddress')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('dcpublicip'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName') ,parameters('subnetName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "DC-1",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', 'DC1-NetworkInterface')]"
      ],
      "tags": {
        "displayName": "DC-1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "osProfile": {
          "computerName": "DC-1",
          "adminUsername": "[parameters('adminusername')]",
          "adminPassword": "[parameters('adminpassword')]" 
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "name": "DC1OSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'DC1-NetworkInterface')]"
            }
          ]
        }
      }
    },
    {
      "name": "DC-1/DCPROMO",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "DC-1/DCPROMO"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', 'DC-1')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesUrl": "[uri(parameters('_artifactsLocation'), concat('DSC/PromoteDC.ps1.zip', parameters('_artifactsLocationSasToken')))]",          
          "configurationFunction": "PromoteDC.ps1\\ADDomain_NewForest_Config",
          "Properties": {
            "DomainName": "[parameters('domainName')]",
            "Credential": {
              "UserName": "[parameters('adminusername')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            }
          }
        
        },
        "protectedSettings": {
          "Items":{
            "AdminPassword": "[parameters('adminpassword')]"
          }
        }
      }
    },
    {
    "name": "updatevnetdns",
    "type": "Microsoft.Resources/deployments",
    "apiVersion": "2019-10-01",
    "dependsOn": [
      "DCPROMO"
    ],
    "properties": {
      "mode": "Incremental",
      "templateLink": {
        "uri": "[variables('linkedtemplateuri')]",
        "contentVersion": "1.0.0.0"
      },
      "parameters": {
        "virtualNetworkName": {
          "value": "[parameters('virtualNetworkName')]"
        },
        "virtualNetworkAddressRange": {
          "value": "[parameters('virtualNetworkAddressRange')]"
        },
        "subnetName": {
          "value": "[parameters('subnetName')]"
        },
        "subnetRange": {
          "value": "[parameters('subnetRange')]"
        },
        "DNSServerAddress": {
          "value": [
            "[parameters('privateIPAddress')]"
          ]
        },
        "location": {
          "value": "[parameters('location')]"
        }
      }
    }
  },
    {
      "name": "[variables('aadcpublicip')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "AADC-PublicIPAddress"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('aadcpublicip')]"
        }
      }
    },
    {
      "name": "AADC-nsg",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "nsgRule1",
            "properties": {
              "description": "description",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "AADC-NetworkInterface",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('aadcpublicip'))]",
       "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ],
      "tags": {
        "displayName": "AADC Network Interface"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipConfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
            "privateIPAddress":"10.0.0.6",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('aadcpublicip'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName') ,parameters('subnetName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "AADC",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', 'AADC-NetworkInterface')]"
      ],
      "tags": {
        "displayName": "AADC"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "osProfile": {
          "computerName": "AADC",
          "adminUsername": "[parameters('adminusername')]",
          "adminPassword": "[parameters('adminpassword')]" 
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "name": "AADCOSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'AADC-NetworkInterface')]"
            }
          ]
        }
        
      }
    },
    {
      "name": "[variables('exchpublicip')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "EXCHMBX1-PublicIPAddress"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('exchpublicip')]"
        }
      }
    },
    {
      "name": "EXCHMBX1-nsg",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "nsgRule1",
            "properties": {
              "description": "description",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "EXCHMBX1-NetworkInterface",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('exchpublicip'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ],
      "tags": {
        "displayName": "EXCHMBX1 Network Interface"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipConfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress":"10.0.0.7",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('exchpublicip'))]"
              },
              "subnet": {
                 "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName') ,parameters('subnetName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "EXCHMBX1",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', 'EXCHMBX1-NetworkInterface')]"
      ],
      "tags": {
        "displayName": "EXCHMBX1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_D4s_v3"
        },
        "osProfile": {
          "computerName": "EXCHMBX1",
          "adminUsername": "[parameters('adminusername')]",
          "adminPassword": "[parameters('adminpassword')]" 
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2016-Datacenter",
            "version": "latest"
          },
          "osDisk": {
            "name": "EXCHMBX1OSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'EXCHMBX1-NetworkInterface')]"
            }
          ]
        
        }
      }
    },
    {
      "name": "[variables('workstationpublicip')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Workstation-PublicIP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('workstationpublicip')]"
        }
      }
    },
    {
      "name": "Workstation-nsg",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "nsgRule1",
            "properties": {
              "description": "description",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "Workstation-NetworkInterface",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('workstationpublicip'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ],
      "tags": {
        "displayName": "Workstation Network Interface"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipConfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress":"10.0.0.8",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('workstationpublicip'))]"
              },
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName') ,parameters('subnetName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "Workstation",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', 'Workstation-NetworkInterface')]"
      ],
      "tags": {
        "displayName": "Workstation"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "osProfile": {
          "computerName": "WORKSTATION",
          "adminUsername": "[parameters('adminusername')]",
          "adminPassword": "[parameters('adminpassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsDesktop",
            "offer": "Windows-10",
            "sku": "RS5-Pro",
            "version": "latest"
          },
          "osDisk": {
            "name": "WorkstationOSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'Workstation-NetworkInterface')]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageName')]"
    },
    "dcpublicip": {
      "type": "string",
      "value": "[variables('dcpublicip')]"
    },
    "aadcpublicip": {
      "type": "string",
      "value": "[variables('aadcpublicip')]"
    },
    "exchpublicip": {
      "type": "string",
      "value": "[variables('exchpublicip')]"
    },
    "workstationpublicip": {
      "type": "string",
      "value": "[variables('workstationpublicip')]"
    }
  }
}